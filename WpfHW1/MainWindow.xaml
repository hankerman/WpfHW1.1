<Window x:Class="WpfHW1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHW1"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Column="1"
                      ShowsPreview="False"
                      Width="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch" />
        <Border>
            <Border.Background>
                <ImageBrush ImageSource="Resources/cafeBack2.jpg"
                                Stretch="UniformToFill"
                                Viewbox="0, 0, 0.7, 0.7"/>
            </Border.Background>
        </Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Border Background="#FFD1CABE"
                    BorderBrush="Black"
                    BorderThickness ="2.5"
                    CornerRadius="0 0 20 20"/>
            <StackPanel Orientation="Horizontal">
                <Image Source="Resources/candy.png"
                       Width="50"
                       Height="50"
                       Margin="20 10 0 10"/>
                <Grid Margin="10 5 0 5">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="my"
                            FontFamily="Georgia italic ipact"
                            VerticalAlignment="Bottom"
                            FontSize="16"/>
                        <TextBlock Text="Candy"
                            FontFamily="Book Antiqua"
                            VerticalAlignment="Bottom"
                            FontSize="16"
                            FontStyle="Oblique"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Row="1"
                               Text="based in 2022"
                               VerticalAlignment="Top"
                               FontFamily="Georgia italic ipact"
                               FontSize="6"/>
                </Grid>
            </StackPanel>
            
            <Canvas Grid.Row="1"
                    Width="400"
                    Height="250">
                <Border 
                        Canvas.Left="20"
                        Canvas.Top="20"
                        Background="#B2D1CABE"
                        BorderBrush="Black"
                        BorderThickness="3"
                        Width="360"
                        Height="210"
                        CornerRadius="25">
                    <TextBlock 
                               FontFamily="Comic Sans MS"
                               FontSize="20"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <Run TextDecorations="Underline"
                               FontWeight="Bold">Мы</Run> делаем самые
                        <LineBreak/>
                        вкусные конфеты и
                        <LineBreak/>
                        выпечку. Приходите к
                        <LineBreak/>
                        нам утром на завтрак и
                        <LineBreak/>
                        попробуйте свежий
                        <LineBreak/>
                        кофе
                    </TextBlock>
                    
                </Border>
                <Image Source="Resources/purepng.com-christmas-candy.png"
                       Width="70"
                       Canvas.Top="10"
                       Canvas.Left="10"/>
                <Image Source="Resources/candy-list.png"
                       Width="80"
                       Canvas.Right="30"
                       Canvas.Bottom="20"/>
            </Canvas>
            <Button Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Grid.Row="2"
                    Width="350"
                    Height="150">
                <Border 
                    Width="340"
                    Height="130"
                    CornerRadius="25"
                    Background="#FFD1CABE"
                    BorderBrush="Black"
                    BorderThickness="2.5">
                    <TextBlock Text="Вход"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="50"
                               FontWeight="Bold"
                               FontFamily="Comic Sans MS"/>
                </Border>
            </Button>
            
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>                
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <DockPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>
                    <Border Background="#B2D1CABE" 
                            BorderBrush="Black"
                            BorderThickness ="2"/>
                    <TextBlock>Grid</TextBlock>
                    <Border Background="#FF8B733D" 
                            BorderBrush="Black"
                            BorderThickness ="2"
                            Grid.Row="1"/>
                    <WrapPanel Grid.Row="1">
                        <TextBlock>WrapPanel</TextBlock>
                    </WrapPanel>
                </Grid>
            </DockPanel>
            <DockPanel Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>
                    <Border Background="#B2D1CABE" 
                            BorderBrush="Black" 
                            BorderThickness ="2"/>
                    <TextBlock>Grid</TextBlock>
                    <Border Background="#FF8B733D"
                            BorderBrush="Black"
                            BorderThickness ="2" 
                            Grid.Row="1"/>
                    <StackPanel Grid.Row="1">
                        <TextBlock>StakPanel</TextBlock>
                    </StackPanel>
                </Grid>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
